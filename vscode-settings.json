{
    "sync.gist": "sync gist ID goes here",
    "atomKeymap.promptV3Features": true,
    "breadcrumbs.enabled": false,
    "editor.colorDecorators": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorWidth": 5,
    "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.quickSuggestionsDelay": 30,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [80, 100],
    "editor.tabSize": 2,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 25,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 100,
    "files.trimTrailingWhitespace": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "liveServer.settings.donotVerifyTags": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.newWindowDimensions": "maximized",
    "window.restoreWindows": "all",
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": -0.7011423868783222,
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "scrollbarSlider.background": "#3c5058"
    },
    "workbench.colorTheme": "Atom Material Theme",
    "workbench.editor.enablePreview": false,
    "workbench.editor.openPositioning": "last",
    "workbench.editor.tabCloseButton": "off",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true
    },
    // *********** Auto-formatting ***********
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "eslint.alwaysShowStatus": true,
    "javascript.validate.enable": false, // disable typescript linting to use flow
    "[javascript]": {
        "editor.formatOnSave": false
    },
    // Home laptop
    "eslint.autoFixOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // *********** End Auto-formatting ***********
}
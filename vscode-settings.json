{
  // *********** Auto-formatting ***********
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "javascript.validate.enable": false, // disable typescript linting to use flow
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.autoFixOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // *********** End Auto-formatting ***********
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/d.ts": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true
  },
  "sync.gist": "929d1b58ffe29b3826263ee419337f2d",
  "atomKeymap.promptV3Features": true,
  "breadcrumbs.enabled": false,
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 5,
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.matchBrackets": false,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestionsDelay": 30,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 100],
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 25,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.trimTrailingWhitespace": true,
  "javascript.autoClosingTags": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "subtleBrackets.style": {
    "borderWidth": "2px"
  },
  "telemetry.enableTelemetry": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "all",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": -0.055124232319162525,
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "scrollbarSlider.background": "#3c5058"
  },
  "workbench.colorTheme": "Atom Material Theme",
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.tabCloseButton": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "gitlens.currentLine.enabled": false,
  "typescript.tsserver.log": "verbose",
  "typescript.disableAutomaticTypeAcquisition": true,
  "workbench.tree.renderIndentGuides": "always"
}
